@model School
@{
    ViewData["Title"] = "EditSchool";
}
<h2>Edit School</h2>

@using (Html.BeginForm("SchoolEdited", "School", FormMethod.Post))
{
    @Html.HiddenFor(n=>n.Id)

    <div class="form-group">
        @Html.LabelFor(n => n.Name)
        @Html.TextBoxFor(n => n.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(n=>n.Name,"", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Address)
        @Html.TextBoxFor(e => e.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Address, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.FoundingYear)
        @Html.TextBoxFor(a => a.FoundingYear,"{0:yyyy-MM-dd}", new { @class = "form-control", @type="date", @value = Model.FoundingYear.ToString("yyyy-MM-dd") })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.NumberOfStudents)
        @Html.TextBoxFor(a => a.NumberOfStudents, new { @class = "form-control" })
    </div>


    <button type="submit" class="btn btn-default">Save Changes</button>

}


