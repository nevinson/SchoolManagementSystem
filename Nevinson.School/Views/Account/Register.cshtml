@model Nevinson.School.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm("Registered","Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(n => n.Email)
                @Html.TextBoxFor(n => n.Email, new {@class = "form-control" })
                @Html.ValidationMessageFor(n => n.Email, "", new {@class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.Password)
                @Html.TextBoxFor(n => n.Password, new {@class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(n => n.Password, "", new {@class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.ConfirmPassword)
                @Html.TextBoxFor(n => n.ConfirmPassword, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(n => n.ConfirmPassword, "", new {@class = "text-danger" })
            </div>
            
            <button type="submit" class="btn btn-success">Register</button>
        }
    </div>
</div>
