@model Nevinson.School.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm("LoggedIn","Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(n => n.Email)
                @Html.TextBoxFor(n => n.Email, new {@class = "form-control" })
                @Html.ValidationMessageFor(n => n.Email, "", new {@class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.Password)
                @Html.TextBoxFor(n => n.Password, new {@class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(n => n.Password, "", new {@class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.RememberMe)
                @Html.TextBoxFor(n => n.RememberMe, new { @class = "form-control", @type = "checkbox" })
                @Html.ValidationMessageFor(n => n.RememberMe, "", new {@class = "text-danger" })
            </div>
            
            <button type="submit" class="btn btn-success">Login</button>
        }
    </div>
</div>
